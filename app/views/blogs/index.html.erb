<p style="color: green"><%= notice %></p>

<h1>Blogs</h1>

<table id="blogs">
  <thead>
    <th>Title</th>
    <th>Body</th>
    <th>Status</th>
    <th></th>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td>
          <%= blog.title %>
        </td>
        <td>
          <%= blog.body %>
        </td>
        <td>
          <%= link_to blog.status, toggle_status_blog_path(blog) %>
        </td>
        <td>
          <%= link_to "Show this blog", blog %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New blog", new_blog_path %>
