<p style="color: green"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @blog.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @blog.body %>
</p>

<div>
  <%= link_to "Edit this blog", edit_blog_path(@blog) if logged_in?(:site_admin) %>
  <%= link_to "Back to blogs", blogs_path %>

  <%= button_to "Destroy this blog", @blog, method: :delete if logged_in?(:site_admin) %>
</div>
