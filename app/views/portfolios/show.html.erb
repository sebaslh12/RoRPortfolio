

<%= image_tag @portfolio_item.main_image if @portfolio_item.main_image?%>
<h1><%=@portfolio_item.title%></h1>
<em><%=@portfolio_item.subtitle%></em>
<p><%=@portfolio_item.body%></p>
<h3>Technologies Used:</h3>
<ul>
<% @portfolio_item.technologies.each do |tech| %>
    <li><%= tech.name %></li>
<% end %>
</ul>

<%= link_to "Edit", edit_portfolio_path(@portfolio_item.id) %>
